{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"rootDir": "./",
		"outDir": "./dist",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"declaration": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"types": ["node"],
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		},
		"typeRoots": ["./node_modules/@types", "./src/interfaces"],
		"lib": ["es2018", "esnext.asynciterable"]
	},
	"include": ["./index.ts", "./src/**/*"]
}
